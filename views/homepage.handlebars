<div>You are on the homepage</div>
<ol class="post-list">
  {{#each posts}}
  <li>
    <article class="post">
      <div class="title">
        <a href="{{contents}}" target="_blank">{{title}}</a>
        <span>({{contents}})</span>
      </div>
      <div class="meta">
        {{user.username}} on
        {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>
